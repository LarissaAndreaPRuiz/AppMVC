@model AppMVC.Models.Endereco

@{
    ViewData["Title"] = "Editar Endereço";
}

<h2>@ViewData["Title"]</h2>

<form method="post" asp-action="Editar" asp-route-id="@Model.Id">
    @Html.AntiForgeryToken()

    <!-- Campo oculto para passar a PessoaId -->
    <input type="hidden" name="PessoaId" value="@Model.PessoaId" />

    <div class="form-group">
        <label for="EnderecoPessoa">Endereço</label>
        @Html.EditorFor(model => model.EnderecoPessoa, new { htmlAttributes = new { @class = "form-control", id = "EnderecoPessoa", required = "required" } })
    </div>

    <div class="form-group">
        <label for="CEP">CEP</label>
        @Html.EditorFor(model => model.CEP, new { htmlAttributes = new { @class = "form-control", id = "CEP", required = "required", pattern = @"^\d{5}-\d{3}$", title = "Formato esperado: 12345-678" } })
    </div>

    <div class="form-group">
        <label for="Cidade">Cidade</label>
        @Html.EditorFor(model => model.Cidade, new { htmlAttributes = new { @class = "form-control", id = "Cidade", required = "required" } })
    </div>

    <div class="form-group">
        <label for="Estado">Estado</label>
        @Html.EditorFor(model => model.Estado, new { htmlAttributes = new { @class = "form-control", id = "Estado", required = "required" } })
    </div>

    <button type="submit" class="btn btn-success">Salvar</button>
</form>

<a href="@Url.Action("Index", "Enderecos")" class="btn btn-secondary mt-3">Cancelar</a>
